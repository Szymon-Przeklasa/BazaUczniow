<Window x:Class="BazaUczniow.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BazaUczniow"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Label Content="* PESEL:" HorizontalAlignment="Left" Height="28" Margin="23,23,0,0" VerticalAlignment="Top" Width="69" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="PESEL_input" HorizontalAlignment="Left" Height="28" Margin="171,23,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="* Imię:" HorizontalAlignment="Left" Height="28" Margin="23,59,0,0" VerticalAlignment="Top" Width="58" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="Imie_input" HorizontalAlignment="Left" Height="28" Margin="171,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="  Drugię imię:" HorizontalAlignment="Left" Height="28" Margin="23,92,0,0" VerticalAlignment="Top" Width="89" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="Imie2_input" HorizontalAlignment="Left" Height="28" Margin="171,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="* Nazwisko:" HorizontalAlignment="Left" Height="28" Margin="23,127,0,0" VerticalAlignment="Top" Width="89" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="Nazwisko_input" HorizontalAlignment="Left" Height="28" Margin="171,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="* Data urodzenia:" HorizontalAlignment="Left" Height="28" Margin="23,161,0,0" VerticalAlignment="Top" Width="126" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="DataUrodzenia_input" HorizontalAlignment="Left" Height="28" Margin="171,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="  Numer telefonu:" HorizontalAlignment="Left" Height="28" Margin="23,196,0,0" VerticalAlignment="Top" Width="126" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="NumerTelefonu_input" HorizontalAlignment="Left" Height="28" Margin="171,196,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="* Adres zamieszkania:" HorizontalAlignment="Left" Height="28" Margin="23,229,0,0" VerticalAlignment="Top" Width="143" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="Adres_input" HorizontalAlignment="Left" Height="28" Margin="171,229,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="* Miejscowość: " HorizontalAlignment="Left" Height="28" Margin="23,263,0,0" VerticalAlignment="Top" Width="110" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="Miejscowosc_input" HorizontalAlignment="Left" Height="28" Margin="171,263,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Label Content="* Kod pocztowy: " HorizontalAlignment="Left" Height="28" Margin="23,298,0,0" VerticalAlignment="Top" Width="110" Padding="0,0,0,0" VerticalContentAlignment="Center" FontSize="15"/>
        <TextBox x:Name="KodPocztowy_input" HorizontalAlignment="Left" Height="28" Margin="171,298,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" FontSize="15" VerticalContentAlignment="Center" Padding="5,0,0,0"/>
        <Button Content="Anuluj" Height="32" Width="64" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,10,10" Click="Anuluj_Click"/>
        <Button Content="OK" Height="32" Width="64" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,85,10" Click="OK_Click"/>

    </Grid>
</Window>
